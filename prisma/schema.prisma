generator client {
  provider = "prisma-client-js"
  // engineType = "client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model User {
  id              String   @id @default(uuid())
  googleId        String   @unique
  username        String
  email           String   @unique
  profile_picture String
  created_at      DateTime @default(now())

  // Relationships
  submissions Submission[]
  scores      UserScore[]
  learned     learned[]
  badge       Badge[]
}

model Problem {
  id                String   @id @default(uuid())
  title             String
  description       String
  sampleInput       String
  sampleOutput      String
  sampleExplanation String
  created_at        DateTime @default(now())

  // Relationships
  submissions Submission[]
}

model Submission {
  id         String   @id @default(uuid())
  userId     String
  problemId  String
  code       String?
  isCorrect  Boolean  @default(false)
  score      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  problem Problem @relation(fields: [problemId], references: [id])
}

model UserScore {
  id          String   @id @default(uuid())
  userId      String   @unique
  totalScore  Int      @default(0)
  solvedCount Int      @default(0)
  lastUpdated DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model LearningResource {
  id         Int      @id @default(autoincrement())
  topic      String
  desc       String
  source     String
  code       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  // relations
  quizs Quiz[]
}

model Quiz {
  id               String           @id @default(uuid())
  question         String
  options          String[]
  resource_id      Int
  correctAnswer    String
  created_at       DateTime         @default(now())
  updated_at       DateTime         @default(now()) @updatedAt
  // relations
  learningResource LearningResource @relation(fields: [resource_id], references: [id])
}

model learned {
  id     String @id @default(ulid())
  resId  Int
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([resId, userId])
}

model Badge {
  id          String  @id @default(uuid())
  name        String  
  description String?
  iconUrl     String?
  category    String?
  level       Int?
  conditions  Json?
  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  user User @relation(fields: [userId], references: [id])
}
